.more-list-wrap{
  background-color: #fff;
  border-radius:8rpx;
  padding:0rpx 40rpx 0rpx;
  color: #353535;
  font-size: 30rpx;
  position: relative;
}



/* 三角形 */
.more-list-bottom-arrow,.more-list-up-arrow{
  content: "";
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  position: absolute;
  right: 18rpx;
}
.more-list-bottom-arrow{
  border-bottom: 20rpx solid transparent;
  border-top: 20rpx solid #fff;
  bottom: -38rpx;
}
.more-list-up-arrow{
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid #fff;
  top: -38rpx;
}
.more-list-item{
   height: 80rpx;
  line-height: 80rpx;
  padding-right: 40rpx;
  border-bottom: 2rpx solid #eee;
}

.more-list-item:last-child{
   margin-bottom: 0;
   border-bottom: none;
}