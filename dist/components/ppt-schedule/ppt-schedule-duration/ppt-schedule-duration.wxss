.ppt-schedule-duration{
   display: flex; 
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  position: relative;
}
.ppt-schedule-duration .duration-day{
   flex: 1;
  text-align:center; 
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.ppt-schedule-duration view.on{
  color: rgb(97,149,255);
}
.go-to-last,.go-to-next{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 140rpx;
  height: 88rpx;
}
.go-to-last{
  left: 0rpx;
}
.go-to-next{
  right: 0rpx;
}
