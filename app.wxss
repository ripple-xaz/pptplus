page{
  background-color: #fff;
}
text{
    font-family:PingFangSc;
    font-size: 24rpx;
}
.mask{
    z-index:1000;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.45);
}
.hover-class{
  background-color: #eee;
}

/*水平弹性盒子*/
.flex-align{
  display: flex;
  flex:wrap;
  flex-direction: row
}
.flex-align>view{
  flex: 1;
}
/*垂直弹性盒子*/
.flex-justify{
  display: flex;
  flex-direction: column;
}
.flex-justify>view{
  flex:1;
}
/*容器居中*/
.xy-mid{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
}
/*变为块状*/
.block{
  display: block;
}
/*userInfo分割线*/
.devide-line{ 
  height: 16rpx;
  background-color: #eee;
}
.ellipsis{
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}